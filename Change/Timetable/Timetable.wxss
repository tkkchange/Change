swiper {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.layout_vertical{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.kind-list-item {
margin: 20rpx 0;
background-color: #fff;
border-radius: 4rpx;
overflow: hidden;
border-bottom: 1px dashed #888;
}

.kind-list-item:first-child {
margin-top: 0;
}
 
.kind-list-text {
flex: 1;
font-size: 30rpx;
}

.kind-list-img {
width: 60rpx;
height: 60rpx;
}

.add_icon{

  position: fixed;

  width:42px;

  height:42px;

bottom: 600rpx;

right: 20rpx;

}