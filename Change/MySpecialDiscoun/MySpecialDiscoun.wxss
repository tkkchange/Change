.title{
  background-color: #ECF5FF;
  line-height: 60rpx;
  width: 100%;
  text-align: center;
  font-size: 13px;
}
.title text{
  color:lightblue;
}
.discount{
  border: 3px solid lightblue;
  margin: 15px;
  height: 150rpx;
  display: flex;
  flex-direction: row;
}
.number{
  border-right: 2px solid lightgray;
  width: 20%;
  line-height: 75rpx;
  margin: 5px;
  color: lightblue;
  text-align: center;
  font-size: 25px;
}
.center{
 /* border: 1px solid pink;*/
  width: 60%;
  height: 150rpx;
}
.center_title{
 /* border: 1px solid red;*/
  padding: 2px;
  height: 80rpx;
  font-size: 18px;
  line-height: 40rpx;
  /* 显示多行 */
  display:-webkit-box; 
  overflow:hidden; 
  /* 2为显示的行数 */
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.center_date{
 /* border: 1px solid red;*/
  color: lightgrey;
  font-size: 10px;
  height: 70rpx;
  line-height: 70rpx;
  vertical-align: middle;
}
.rightview{
  width: 20%;
  height: 150rpx;
 
}
.discount checkbox{
 /* border: 1px solid red;*/
  height: 90rpx;
  padding: 5px;
}
.rule{
 /* border: 1px solid red;*/
  height: 50rpx;
  width: 100rpx;
  color: lightgray;
  font-size: 8px;
  line-height: 50rpx;
  vertical-align: text-bottom;
}
.hideview{
  
  width: 90%;
  margin: 15px;
  padding: 5px;
  line-height: 40rpx;
  background-color:#ECF5FF;
  font-size: 13px;
  color: lightgray;
}
